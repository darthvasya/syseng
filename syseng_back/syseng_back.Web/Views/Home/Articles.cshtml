
@{
    ViewBag.Title = "Articles";
    Layout = "~/Views/Shared/_LayoutArticles.cshtml";
}


<div class="parallax head-window">
    <!-- <h1><span class="ooo">ООО «Системная инженерия»</span> <br>предоставляет заказчикам комплексные решения в направлениях ориентированных на повышение ресурсоэффективности и экологической безопасности</h1> -->
    <!-- <button type="button" class="btn btn-default">Начать</button> -->
    <h2>Наши статьи</h2>
</div>

<section class="articles">
    @foreach (var article in ViewBag.Articles)
    {
        <div class="col-md-12 article">
            <div class="col-md-1"></div>
            <div class="col-md-10 main">
                <div class="image left">
                    <img src="~/Content/images/@article.ImageUrl" width="40%" alt="">
                </div>
                <div class="content right">
                    <h1><a href="../home/article/@article.Id" class = "header-link">@article.Title</a></h1>
                    <i>@article.Date</i>
                    <p>@article.ShortBody</p>
                    @Html.ActionLink("Подробнее", "article", "home", new { id = article.Id }, new { @class = "link" })
                </div>
                <hr>
            </div>
            <div class="col-md-1"></div>
        </div>
    }
</section>




@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_LayoutArticles.cshtml";
}


<div class="parallax head-window">
    <h2>Наши проекты</h2>
</div>

<section class="articles">
    <div class="container">
        <div class="row">
        @foreach (var project in ViewBag.Projects)
        {
            <div class="col-md-4 element project">
                <a href="../home/project/@project.Id" style="color: black; text-decoration: none; font-size: 18px; text-align: center;">
                    <div class="text">
                        <p>@project.Title</p>
                    </div>
                    <div class="img">
                        <img src="~/Content/images/@project.ImageUrl" width="100%" alt="">
                    </div>

                </a>
            </div>
        }
        </div>
    </div>
</section>
